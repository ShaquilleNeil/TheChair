<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Customer.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Profile Card (Soft Glass) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:orientation="vertical"
                android:background="@drawable/bg_glass_soft"
                android:elevation="4dp"
                android:clipToOutline="true"
                android:layout_marginTop="16dp">

                <!-- Profile Image -->
                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/circle_background"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person" />

                <!-- Name -->
                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="John Doe"
                    android:textColor="@color/brand_charcoal"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <!-- Email -->
                <TextView
                    android:id="@+id/profileEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="john.doe@example.com"
                    android:textColor="@color/brand_charcoal"
                    android:textSize="16sp" />

                <!-- Phone -->
                <TextView
                    android:id="@+id/profilePhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="+1 234 567 890"
                    android:textColor="@color/brand_charcoal"
                    android:textSize="16sp" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/input_border" />

                <!-- Address Heading -->
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Address"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/brand_charcoal" />

                <!-- Address -->
                <TextView
                    android:id="@+id/profileAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="123 Main St, Room 101, City"
                    android:textColor="@color/brand_charcoal"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Edit Profile Button -->
            <Button
                android:id="@+id/editProfileButton"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="28dp"
                android:text="Edit Profile"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:backgroundTint="@color/brand_teal"
                android:textColor="@color/white"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:elevation="4dp" />

            <!-- Sign Out -->
            <Button
                android:id="@+id/btnSignOut"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="18dp"
                android:text="Sign Out"
                android:textAllCaps="false"
                android:backgroundTint="@color/error_red"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textColor="@color/white" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="22dp"
    android:background="@drawable/dialog_bg_premium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="12dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/proImage"
            android:layout_gravity="center"
            android:background="@drawable/circle_mask"
            android:clipToOutline="true"
            android:src="@drawable/ic_person"/>

        <TextView
            android:id="@+id/proName"
            android:text="Professional Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/proProfession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Professional Profession"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:textColor="@color/text_secondary"/>

    </LinearLayout>



    <!-- View Profile (Primary CTA – Burgundy) -->
    <Button
        android:id="@+id/btnViewProfile"
        android:text="View Profile"
        android:textColor="@color/white"
        android:backgroundTint="@color/burgundy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        style="@style/Widget.Material3.Button" />

    <!-- Directions (Secondary CTA – Cream surface + Burgundy text) -->
    <Button
        android:id="@+id/btnDirections"
        android:text="Get Directions"
        android:textColor="@color/burgundy"
        android:backgroundTint="@color/cream"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.Button" />

</LinearLayout>

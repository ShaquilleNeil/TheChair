<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer.NearbyFragment">

    <!-- MAP BEHIND EVERYTHING -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- FLOATING FILTER SEARCH BUTTON + EXPANDING BAR -->
    <FrameLayout
        android:id="@+id/searchFabContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_margin="16dp">

        <!-- ðŸ”µ COLLAPSED SEARCH BUTTON -->
        <ImageView
            android:id="@+id/searchFab"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/rounded_white_circle"
            android:padding="14dp"
            android:elevation="8dp"
            android:src="@android:drawable/ic_menu_search" />

        <!-- ðŸ” EXPANDED SEARCH BAR (starts hidden) -->
        <LinearLayout
            android:id="@+id/searchContainer"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/rounded_white"
            android:elevation="10dp"
            android:padding="8dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/serviceSearchBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textSize="16sp"
                android:hint="Filter by style..."
                android:paddingStart="8dp" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>

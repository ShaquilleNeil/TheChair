<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_premium"
    android:padding="16dp"
    android:layout_marginBottom="10dp">

    <!-- TIME RANGE -->
    <TextView
        android:id="@+id/txtTime"
        android:text="10:30 - 12:00"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/burgundy"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- CLIENT NAME -->
    <TextView
        android:id="@+id/txtClientName"
        android:text="Client: Alison"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- SERVICE NAME -->
    <TextView
        android:id="@+id/txtService"
        android:text="Silk Press"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- STATUS -->
    <TextView
        android:id="@+id/txtStatus"
        android:text="Status: pending"
        android:textSize="13sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- BUTTONS ROW -->
    <LinearLayout
        android:id="@+id/pendingButtons"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnAccept"
            android:text="Accept"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:backgroundTint="@color/burgundy"
            android:layout_marginRight="8dp"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnReject"
            android:text="Reject"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:backgroundTint="@color/error_red"
            android:layout_marginRight="8dp"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnDone"
            android:text="Mark as Done"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:backgroundTint="@color/burgundy_dark"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>

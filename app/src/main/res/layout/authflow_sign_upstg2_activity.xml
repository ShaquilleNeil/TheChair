<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginTop="20dp"
    android:padding="28dp"
    android:background="#FFFFFF">
    <!-- Address Line 1 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Address Line 1"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextAddress1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@android:drawable/edit_text"
        android:hint="Enter address line 1"
        android:inputType="textPostalAddress"
        android:padding="10dp" />

    <!-- Address Line 2 (Optional) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address Line 2 (Optional)"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextAddress2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@android:drawable/edit_text"
        android:hint="Enter address line 2"
        android:inputType="textPostalAddress"
        android:padding="10dp" />

    <!-- City -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="City"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@android:drawable/edit_text"
        android:hint="Enter city"
        android:inputType="text"
        android:padding="10dp" />

    <!-- Province -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Province"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextProvince"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@android:drawable/edit_text"
        android:hint="Enter province"
        android:inputType="text"
        android:padding="10dp" />

    <!-- Postal Code -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Postal Code"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextPostalCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@android:drawable/edit_text"
        android:hint="Enter postal code"
        android:inputType="textPostalAddress"
        android:padding="10dp" />

    <!-- Phone Number -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@android:drawable/edit_text"
        android:hint="Enter phone number"
        android:inputType="phone"
        android:padding="10dp" />

    <Button
        android:id="@+id/buttonnext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#2196F3"
        android:padding="10dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />
</LinearLayout>
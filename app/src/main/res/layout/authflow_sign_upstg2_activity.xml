<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="28dp"
    android:background="@color/brand_charcoal_dark">

    <!-- Address Line 1 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Address Line 1"
        android:textColor="@color/brand_cream"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextAddress1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_input_field"
        android:hint="Enter address line 1"
        android:textColor="@color/white"
        android:textColorHint="@color/brand_cream_muted"
        android:padding="12dp"
        android:inputType="textPostalAddress" />

    <!-- Address Line 2 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address Line 2 (Optional)"
        android:textColor="@color/brand_cream"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextAddress2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_input_field"
        android:hint="Enter address line 2"
        android:textColor="@color/white"
        android:textColorHint="@color/brand_cream_muted"
        android:padding="12dp"
        android:inputType="textPostalAddress" />

    <!-- City -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="City"
        android:textColor="@color/brand_cream"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_input_field"
        android:hint="Enter city"
        android:textColor="@color/white"
        android:textColorHint="@color/brand_cream_muted"
        android:padding="12dp"
        android:inputType="text" />

    <!-- Province -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Province"
        android:textColor="@color/brand_cream"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextProvince"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_input_field"
        android:hint="Enter province"
        android:textColor="@color/white"
        android:textColorHint="@color/brand_cream_muted"
        android:padding="12dp"
        android:inputType="text" />

    <!-- Postal Code -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Postal Code"
        android:textColor="@color/brand_cream"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextPostalCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_input_field"
        android:hint="Enter postal code"
        android:textColor="@color/white"
        android:textColorHint="@color/brand_cream_muted"
        android:padding="12dp"
        android:inputType="textPostalAddress" />

    <!-- Phone Number -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textColor="@color/brand_cream"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_input_field"
        android:hint="Enter phone number"
        android:textColor="@color/white"
        android:textColorHint="@color/brand_cream_muted"
        android:padding="12dp"
        android:inputType="phone" />

    <!-- NEXT Button -->
    <Button
        android:id="@+id/buttonnext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:backgroundTint="@color/brand_teal"
        android:padding="14dp" />

</LinearLayout>

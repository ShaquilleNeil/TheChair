<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="28dp"
    android:background="@color/white">

    <!-- Address Line 1 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Address Line 1"
        android:textColor="@color/text_primary"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextAddress1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:background="@color/cream"
        android:hint="e.g. 1648 Rue Prieur E"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_secondary"
        android:padding="14dp"
        android:inputType="textPostalAddress" />

    <!-- Address Line 2 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address Line 2 (Optional)"
        android:textColor="@color/text_primary"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextAddress2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:background="@color/cream"
        android:hint="e.g. Apt 2, Suite 304 (optional)"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_secondary"
        android:padding="14dp"
        android:inputType="textPostalAddress" />

    <!-- City -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="City"
        android:textColor="@color/text_primary"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextCity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:background="@color/cream"
        android:hint="e.g. Montréal"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_secondary"
        android:padding="14dp"
        android:inputType="textCapWords" />

    <!-- Province -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Province"
        android:textColor="@color/text_primary"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextProvince"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:background="@color/cream"
        android:hint="e.g. Québec or QC"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_secondary"
        android:padding="14dp"
        android:inputType="textCapWords" />

    <!-- Country -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Country"
        android:textColor="@color/text_primary"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextCountry"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:background="@color/cream"
        android:hint="e.g. Canada"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_secondary"
        android:padding="14dp"
        android:inputType="textCapWords" />

    <!-- Postal Code -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Postal Code"
        android:textColor="@color/text_primary"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextPostalCode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:background="@color/cream"
        android:hint="e.g. H2C 1M4"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_secondary"
        android:padding="14dp"
        android:inputType="textPostalAddress" />

    <!-- Phone Number -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textColor="@color/text_primary"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@color/cream"
        android:hint="e.g. 514-555-1234"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_secondary"
        android:padding="14dp"
        android:inputType="phone" />

    <Button
        android:id="@+id/buttonnext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:backgroundTint="@color/burgundy"
        android:textStyle="bold"
        style="@style/Widget.Material3.Button" />

</LinearLayout>

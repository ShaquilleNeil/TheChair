<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="18dp"
    tools:context=".Customer.BookingsFragment">


    <!-- ============================= -->
    <!-- TODAY HEADER - PREMIUM TILE -->
    <!-- ============================= -->
    <LinearLayout
        android:id="@+id/sectionToday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/card_premium_bg"
        android:clipToOutline="true"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tvToday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Today"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <ImageView
            android:id="@+id/ivTodayArrow"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="4dp"
            android:src="@drawable/ic_arrow_drop_down"
            app:tint="@color/burgundy" />
    </LinearLayout>


    <!-- TODAY LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvToday"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:nestedScrollingEnabled="true"
        android:layout_marginBottom="12dp" />


    <!-- =============================== -->
    <!-- UPCOMING HEADER - PREMIUM TILE -->
    <!-- =============================== -->
    <LinearLayout
        android:id="@+id/sectionUpcoming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/card_premium_bg"
        android:clipToOutline="true"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tvUpcoming"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Upcoming"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <ImageView
            android:id="@+id/ivUpcomingArrow"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="4dp"
            android:src="@drawable/ic_arrow_drop_down"
            app:tint="@color/burgundy" />
    </LinearLayout>


    <!-- UPCOMING LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUpcoming"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:nestedScrollingEnabled="true"
        android:layout_marginBottom="12dp" />


    <!-- =========================== -->
    <!-- PAST HEADER - PREMIUM TILE -->
    <!-- =========================== -->
    <LinearLayout
        android:id="@+id/sectionPast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/card_premium_bg"
        android:clipToOutline="true"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tvPast"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Past"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <ImageView
            android:id="@+id/ivPastArrow"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="4dp"
            android:src="@drawable/ic_arrow_drop_down"
            app:tint="@color/burgundy" />
    </LinearLayout>


    <!-- PAST LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPast"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:nestedScrollingEnabled="true"
        android:layout_marginBottom="20dp" />


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".Professional.ProHomeFragment">

    <!-- PROFILE HEADER -->
    <LinearLayout
        android:id="@+id/profileHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="18dp"
        android:background="@drawable/card_premium_bg"
        android:elevation="8dp"
        android:clipToOutline="true"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Profile Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person"
            app:shapeAppearanceOverlay="@style/CircleImage"
            android:background="@drawable/profile_ring"
            android:clipToOutline="true"/>

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/tvStylistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, Stylist!"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- DATES RECYCLER -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rviewDates"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:overScrollMode="never"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/profileHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- APPOINTMENTS LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rviewAppointments"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/rviewDates"
        app:layout_constraintBottom_toTopOf="@id/btnServices"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvNoAppointments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Appointments"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/rviewDates"
        app:layout_constraintBottom_toTopOf="@id/btnServices"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BUTTON: SERVICES -->
    <Button
        android:id="@+id/btnServices"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="My Services"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:backgroundTint="@color/burgundy"
        android:layout_marginHorizontal="48dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"
        style="@style/Widget.Material3.Button"
        app:layout_constraintBottom_toTopOf="@id/btnAvailability"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BUTTON: AVAILABILITY -->
    <Button
        android:id="@+id/btnAvailability"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Set Availability"
        android:textAllCaps="false"
        android:textColor="@color/burgundy"
        android:backgroundTint="@color/cream"
        android:layout_marginHorizontal="48dp"
        android:layout_marginBottom="24dp"
        style="@style/Widget.Material3.Button"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="28dp"
    android:background="@color/white">

    <!-- UPLOADED IMAGE PREVIEW -->
    <ImageView
        android:id="@+id/imageViewprofile"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:background="@color/cream"
        android:scaleType="centerCrop"
        android:clipToOutline="true" />

    <!-- UPLOAD IMAGE BUTTON -->
    <Button
        android:id="@+id/buttonuploadimage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Upload Image"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/burgundy"
        style="@style/Widget.Material3.Button"
        android:layout_marginTop="14dp" />

    <!-- USER TYPE LABEL -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="6dp"
        android:text="User Type"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- RADIO GROUP -->
    <RadioGroup
        android:id="@+id/radioGroupUserType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <RadioButton
            android:id="@+id/radioCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer"
            android:textColor="@color/text_primary" />

        <RadioButton
            android:id="@+id/radioServiceProvider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Service Provider"
            android:textColor="@color/text_primary" />
    </RadioGroup>

    <TextView
        android:id="@+id/tvprofession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="6dp"
        android:text="Profession"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:visibility="gone"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextProfession"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:background="@color/cream"
        android:hint="e.g. Barber, Loctician etc"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_secondary"
        android:padding="14dp"
        android:visibility="gone"
        android:inputType="textPostalAddress" />

    <!-- TERMS CHECKBOX -->
    <CheckBox
        android:id="@+id/checkBoxTerms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I agree to the Terms of Service and Privacy Policy"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="24dp" />

    <!-- SIGN UP BUTTON -->
    <Button
        android:id="@+id/buttonSignUp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/burgundy"
        style="@style/Widget.Material3.Button"
        android:layout_marginTop="8dp" />

</LinearLayout>

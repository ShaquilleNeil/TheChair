<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Professional.PublicProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/circle_background"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person"/>

            <!-- Name -->
            <TextView
                android:id="@+id/proName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jane Fade"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginTop="12dp" />

            <!-- Profession -->
            <TextView
                android:id="@+id/proProfession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barber"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Rating -->
            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:stepSize="0.5"
                android:numStars="5"
                android:theme="@style/TheChairRatingBar"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/reviewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See Reviews"
                android:textColor="@color/burgundy"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- SERVICES SECTION -->
            <LinearLayout
                android:id="@+id/servicesSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:id="@+id/servicesHeader"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="8dp">

                    <TextView
                        android:text="Services"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_primary" />

                    <ImageView
                        android:id="@+id/servicesArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_drop_down" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/servicesContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/servicesRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:nestedScrollingEnabled="true"
                        tools:listitem="@layout/item_service" />
                </FrameLayout>
            </LinearLayout>

            <!-- PORTFOLIO SECTION -->
            <LinearLayout
                android:id="@+id/portfolioSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:id="@+id/portfolioHeader"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="8dp">

                    <TextView
                        android:text="Portfolio"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_primary" />

                    <ImageView
                        android:id="@+id/portfolioArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_drop_down" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/portfolioContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/galleryRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:nestedScrollingEnabled="true"
                        tools:listitem="@layout/item_grid_image" />
                </FrameLayout>
            </LinearLayout>

            <!-- CTA BUTTONS -->
            <Button
                android:id="@+id/bookNowButton"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Book Now"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:backgroundTint="@color/burgundy"
                android:textStyle="bold"
                style="@style/Widget.Material3.Button"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="20dp" />

            <Button
                android:id="@+id/btnDirections"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Get Directions"
                android:textAllCaps="false"
                android:backgroundTint="@color/cream"
                android:textColor="@color/burgundy"
                android:textStyle="bold"
                style="@style/Widget.Material3.Button"
                android:layout_marginBottom="36dp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>

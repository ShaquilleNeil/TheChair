<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:background="@color/cream">

    <!-- Title -->
    <TextView
        android:id="@+id/titleAddService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Service"
        android:textColor="@color/text_primary"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <!-- Label: Service Name -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Service Name"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"/>

    <!-- Input: Service Name -->
    <EditText
        android:id="@+id/inputServiceName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="e.g. Box Braids"
        android:padding="14dp"
        android:background="@drawable/input_bg"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_secondary"
        android:singleLine="true"
        android:layout_marginBottom="16dp"/>

    <!-- Label: Price -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price ($)"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"/>

    <!-- Input: Price -->
    <EditText
        android:id="@+id/inputServicePrice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="e.g. 50"
        android:padding="14dp"
        android:inputType="numberDecimal"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_secondary"
        android:background="@drawable/input_bg"
        android:singleLine="true"
        android:layout_marginBottom="16dp"/>

    <!-- Label: Duration -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Duration (minutes)"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"/>

    <!-- Input: Duration -->
    <EditText
        android:id="@+id/inputServiceDuration"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="e.g. 45"
        android:padding="14dp"
        android:inputType="number"
        android:background="@drawable/input_bg"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_secondary"
        android:singleLine="true"
        android:layout_marginBottom="30dp"/>

    <!-- Add Service Button -->
    <Button
        android:id="@+id/btnAddService"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Add Service"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:backgroundTint="@color/burgundy"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:background="@color/brand_charcoal">

    <!-- Title -->
    <TextView
        android:id="@+id/titleAddService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Service"
        android:textColor="@color/brand_cream"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <!-- Service Name Label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Service Name"
        android:textColor="@color/brand_cream_muted"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"/>

    <!-- Service Name Input -->
    <EditText
        android:id="@+id/inputServiceName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="e.g. Box Braids"
        android:padding="14dp"
        android:background="@drawable/bg_input_field"
        android:textColor="@color/brand_cream"
        android:textColorHint="@color/brand_cream_muted"
        android:layout_marginBottom="16dp"/>

    <!-- Price Label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price ($)"
        android:textColor="@color/brand_cream_muted"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"/>

    <!-- Price Input -->
    <EditText
        android:id="@+id/inputServicePrice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="e.g. 50"
        android:padding="14dp"
        android:inputType="numberDecimal"
        android:textColor="@color/brand_cream"
        android:textColorHint="@color/brand_cream_muted"
        android:background="@drawable/bg_input_field"
        android:layout_marginBottom="16dp"/>

    <!-- Duration Label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Duration (minutes)"
        android:textColor="@color/brand_cream_muted"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"/>

    <!-- Duration Input -->
    <EditText
        android:id="@+id/inputServiceDuration"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="e.g. 45"
        android:padding="14dp"
        android:inputType="number"
        android:textColor="@color/brand_cream"
        android:textColorHint="@color/brand_cream_muted"
        android:background="@drawable/bg_input_field"
        android:layout_marginBottom="30dp" />

    <!-- Add Service Button -->
    <Button
        android:id="@+id/btnAddService"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Add Service"
        android:textAllCaps="false"
        android:textStyle="bold"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textColor="@color/brand_cream"
        android:backgroundTint="@color/brand_teal"
        android:fontFamily="sans-serif-medium"/>
</LinearLayout>

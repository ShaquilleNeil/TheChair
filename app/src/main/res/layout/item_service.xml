<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="8dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/brand_charcoal"
    app:cardCornerRadius="16dp"
    android:elevation="8dp">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="18dp"
android:background="@drawable/card_outline_premium">

<!-- Service Name -->
<TextView
    android:id="@+id/serviceName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Service Name"
    android:textColor="@color/brand_cream"
    android:textSize="18sp"
    android:textStyle="bold" />

<!-- Price + Duration Row -->
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/servicePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$25"
        android:textColor="@color/brand_teal"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/serviceDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="â€¢ 45 min"
        android:textColor="@color/brand_cream_muted"
        android:textSize="14sp" />
</LinearLayout>

<!-- Optional Description -->
<TextView
    android:id="@+id/serviceDescription"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:text="Description of service goes here."
    android:textColor="@color/brand_cream_muted"
    android:textSize="14sp" />
</LinearLayout>

    </androidx.cardview.widget.CardView>

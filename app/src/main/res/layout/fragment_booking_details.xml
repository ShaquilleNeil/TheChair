<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- ================================== -->
        <!-- PROFESSIONAL CARD -->
        <!-- ================================== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_premium_bg"
            android:padding="18dp"
            android:elevation="6dp"
            android:clipToOutline="true"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/proImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_background_cream"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_person"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/proName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sarah"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/proProfession"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loctician"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnViewProfile"
                android:layout_width="120dp"
                android:layout_height="42dp"
                android:text="View Profile"
                android:textColor="@color/burgundy"
                android:backgroundTint="@color/cream"
                style="@style/Widget.Material3.Button"
                android:elevation="2dp"/>
        </LinearLayout>


        <!-- ================================== -->
        <!-- APPOINTMENT DETAILS -->
        <!-- ================================== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointment Details"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp"
            android:layout_marginTop="10dp"
            android:clipToOutline="true"
            android:elevation="6dp"
            android:background="@drawable/card_premium_bg">

            <TextView
                android:id="@+id/serviceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service: Micro Locs"
                android:textColor="@color/text_primary"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/appointmentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: 2025-11-25"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/appointmentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: 10:00 - 14:30"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/appointmentDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration: 4h"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/appointmentPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: $170"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/appointmentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Confirmed"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="6dp"/>
        </LinearLayout>


        <!-- ================================== -->
        <!-- LOCATION -->
        <!-- ================================== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp"
            android:background="@drawable/card_premium_bg"
            android:elevation="6dp"
            android:clipToOutline="true"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10490 Ave Curotte, Montreal QC"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btnDirections"
                android:layout_width="160dp"
                android:layout_height="46dp"
                android:text="Get Directions"
                android:textColor="@color/white"
                android:backgroundTint="@color/burgundy"
                style="@style/Widget.Material3.Button"/>
        </LinearLayout>


        <!-- ================================== -->
        <!-- ACTION BUTTONS -->
        <!-- ================================== -->

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Cancel Appointment"
            android:textColor="@color/white"
            android:backgroundTint="@color/error_red"
            style="@style/Widget.Material3.Button"
            android:layout_marginTop="25dp"/>

        <Button
            android:id="@+id/btnRate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Rate Experience"
            android:textColor="@color/white"
            android:backgroundTint="@color/burgundy"
            style="@style/Widget.Material3.Button"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btnRebook"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Rebook Service"
            android:textColor="@color/white"
            android:backgroundTint="@color/burgundy"
            style="@style/Widget.Material3.Button"
            android:layout_marginTop="12dp"/>

    </LinearLayout>

</ScrollView>

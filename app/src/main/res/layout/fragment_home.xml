<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer.HomeFragment"
    android:background="@color/white"
    android:fitsSystemWindows="false">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- PROFILE HEADER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="16dp">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/circle_background"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- BANNER -->
                <ImageView
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/card_premium_bg"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/banner" />
            </LinearLayout>


            <!-- CATEGORIES TITLE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">



                <TextView
                    android:id="@+id/categoriesHeading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quick Search"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />


            </LinearLayout>

            <!-- CATEGORIES ROW -->
            <!-- CATEGORIES ROW -->
            <LinearLayout
                android:id="@+id/categoriesLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <!-- Haircut -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/haircut"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:background="@drawable/circle_background_cream"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/haircut" />

                    <TextView
                        android:id="@+id/haircutText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Haircut"
                        android:textColor="@color/text_primary"
                        android:textSize="13sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <!-- Locs -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/locs"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:background="@drawable/circle_background_cream"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/locs" />

                    <TextView
                        android:id="@+id/locsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Locs"
                        android:textColor="@color/text_primary"
                        android:textSize="13sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <!-- Weaves -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/weave"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:background="@drawable/circle_background_cream"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/weave" />

                    <TextView
                        android:id="@+id/weaveText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weaves"
                        android:textColor="@color/text_primary"
                        android:textSize="13sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <!-- Braiding -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/braids"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:background="@drawable/circle_background_cream"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/braids" />

                    <TextView
                        android:id="@+id/braidsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Braids"
                        android:textColor="@color/text_primary"
                        android:textSize="13sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- PICKS OF THE DAY -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 Picks of the Day"
                    android:textColor="@color/text_primary"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- HORIZONTAL RECYCLER -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/serviceProvidersRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:clipToPadding="false"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</FrameLayout>

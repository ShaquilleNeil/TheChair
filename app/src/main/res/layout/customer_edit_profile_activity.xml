<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".Customer.CustomerEditProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- PROFILE PHOTO -->
        <FrameLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="24dp">

            <ImageView
                android:id="@+id/editProfileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_background_cream"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/banner" />

            <ImageButton
                android:id="@+id/btnChangePhoto"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="6dp"
                android:background="@drawable/bg_glass_circle"
                android:contentDescription="Change photo"
                android:src="@drawable/ic_edit_24"
                app:tint="@color/burgundy"/>
        </FrameLayout>

        <!-- INPUT FIELD -->
        <EditText
            android:id="@+id/inputName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="Full Name"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:padding="14dp"
            android:background="@drawable/bg_input_field_premium" />

        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:hint="Email"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:padding="14dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/bg_input_field_premium"  />

        <EditText
            android:id="@+id/inputPhone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:hint="Phone Number"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:padding="14dp"
            android:inputType="phone"
            android:background="@drawable/bg_input_field_premium"  />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@color/border_light" />

        <!-- ADDRESS TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="@color/text_primary"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <!-- ADDRESS FIELDS -->
        <EditText
            android:id="@+id/inputAddressLine1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Street Address"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:padding="14dp"
            android:background="@drawable/bg_input_field_premium"  />

        <EditText
            android:id="@+id/inputAddressLine2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:hint="Apartment / Room (optional)"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:padding="14dp"
            android:background="@drawable/bg_input_field_premium"  />

        <EditText
            android:id="@+id/inputCity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:hint="City"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:padding="14dp"
            android:background="@drawable/bg_input_field_premium"  />

        <EditText
            android:id="@+id/inputProvince"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:hint="Province / State"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:padding="14dp"
            android:background="@drawable/bg_input_field_premium"  />

        <EditText
            android:id="@+id/inputPostalCode"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:hint="Postal / ZIP Code"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:padding="14dp"
            android:background="@drawable/bg_input_field_premium"  />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveChanges"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:text="Save Changes"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="@color/burgundy"
            style="@style/Widget.Material3.Button" />

        <!-- Cancel -->
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/burgundy"
            android:backgroundTint="@color/cream"
            style="@style/Widget.Material3.Button" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

    </LinearLayout>
</ScrollView>

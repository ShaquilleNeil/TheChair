<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- CREAM CARD -->
        <LinearLayout
            android:id="@+id/glassCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_margin="12dp"
            android:background="@color/cream"
            android:elevation="6dp"
            android:clipToOutline="true"
            android:gravity="center_horizontal">

            <!-- SEGMENTED CONTROL -->
            <LinearLayout
                android:id="@+id/segmentContainer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/segment_container_bg"
                android:padding="4dp"
                android:layout_marginBottom="26dp">

                <!-- LOGIN TAB (SELECTED) -->
                <TextView
                    android:id="@+id/tabLogin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Login"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:background="@drawable/segment_selected_burgundy"
                    android:textColor="@color/white"/>

                <!-- SIGNUP TAB -->
                <TextView
                    android:id="@+id/tabSignup"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Sign Up"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:background="@drawable/segment_unselected_cream"
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>

            <!-- LOGIN FORM -->
            <LinearLayout
                android:id="@+id/loginForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- EMAIL -->
                <TextView
                    android:text="Email Address"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/loginEmail"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Enter your email"
                    android:padding="14dp"
                    android:background="@drawable/input_white_field"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:layout_marginBottom="16dp"
                    android:maxLines="1"
                    android:singleLine="true"/>

                <!-- PASSWORD -->
                <TextView
                    android:text="Password"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/loginPassword"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Enter your password"
                    android:padding="14dp"
                    android:background="@drawable/input_white_field"
                    android:inputType="textPassword"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:layout_marginBottom="20dp"
                    android:maxLines="1"
                    android:singleLine="true"/>

                <!-- LOGIN BUTTON -->
                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Login"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/burgundy"
                    style="@style/Widget.Material3.Button"/>
            </LinearLayout>

            <!-- SIGNUP FORM (HIDDEN INITIALLY) -->
            <LinearLayout
                android:id="@+id/signupForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:visibility="gone">

                <TextView
                    android:text="Full Name"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/signupName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:padding="14dp"
                    android:background="@drawable/input_white_field"
                    android:hint="Enter your name"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:layout_marginBottom="16dp"
                    android:maxLines="1"
                    android:singleLine="true"/>

                <TextView
                    android:text="Email Address"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/signupEmail"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Enter your email"
                    android:padding="14dp"
                    android:background="@drawable/input_white_field"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:layout_marginBottom="16dp"
                    android:maxLines="1"
                    android:singleLine="true"/>

                <TextView
                    android:text="Password"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/signupPassword"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Enter your password"
                    android:padding="14dp"
                    android:background="@drawable/input_white_field"
                    android:inputType="textPassword"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:layout_marginBottom="16dp"
                    android:maxLines="1"
                    android:singleLine="true"/>

                <TextView
                    android:text="Confirm Password"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/signupConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Confirm password"
                    android:padding="14dp"
                    android:background="@drawable/input_white_field"
                    android:inputType="textPassword"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_marginBottom="20dp"/>

                <Button
                    android:id="@+id/btnNextSignup"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Next"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/burgundy"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>

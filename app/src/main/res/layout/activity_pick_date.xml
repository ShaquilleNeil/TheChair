<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- FROSTED CARD / GLASS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_glass"
            android:clipToOutline="true"
            android:elevation="14dp">

            <!-- PROFILE IMAGE -->
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/profile_ring"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:src="@drawable/ic_person"
                android:layout_marginBottom="20dp" />

            <!-- NAME -->
            <TextView
                android:id="@+id/tvProName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pro Name"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/proProfession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barber"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:layout_marginBottom="10dp" />

            <!-- SERVICE DETAILS -->
            <TextView
                android:id="@+id/tvServiceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tvServicePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: $40"
                android:textSize="18sp"
                android:textColor="@color/burgundy"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tvServiceDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration: 45 minutes"
                android:textSize="18sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="22dp"/>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border_light"
                android:layout_marginBottom="20dp" />

            <!-- CALENDAR -->
            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:mcv_showOtherDates="none" />

            <!-- Date Label -->
            <TextView
                android:id="@+id/tvSelectedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select a date"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Time Slots -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rviewTimeSlots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>

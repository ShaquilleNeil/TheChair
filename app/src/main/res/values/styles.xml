<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="BottomNavIndicator">
        <item name="android:height">6dp</item>
        <item name="android:width">40dp</item>
        <item name="android:background">@drawable/bottom_nav_indicator</item>
        <item name="android:insetBottom">8dp</item>
    </style>

    <style name="TheChairRatingBar" parent="@style/Widget.AppCompat.RatingBar.Indicator">
        <item name="android:progressTint">@color/burgundy</item>          <!-- filled stars -->
        <item name="android:secondaryProgressTint">@color/burgundy</item> <!-- half stars -->
        <item name="android:indeterminateTint">@color/burgundy</item>

        <item name="android:progressBackgroundTint">@color/border_light</item> <!-- empty stars -->
    </style>



</resources>
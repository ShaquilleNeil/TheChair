<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Disable M3 tinting for custom buttons -->
    <style name="NoTintMaterialButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@null</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- Base premium theme -->
    <style name="Base.Theme.TheChair" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Brand palette -->
        <item name="colorPrimary">@color/brand_charcoal</item>
        <item name="colorOnPrimary">@color/brand_cream</item>

        <item name="colorSecondary">@color/brand_teal</item>
        <item name="colorOnSecondary">@color/brand_cream</item>

        <!-- Surfaces -->
        <item name="colorSurface">@color/brand_charcoal_dark</item>
        <item name="colorOnSurface">@color/brand_cream</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/brand_charcoal_dark</item>

        <!-- Override Material3 button tinting -->
        <item name="materialButtonStyle">@style/NoTintMaterialButton</item>

        <!-- Shape appearance (rounded + modern) -->
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Material3.Corner.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Material3.Corner.Large</item>
    </style>

    <style name="Theme.TheChair" parent="Base.Theme.TheChair" />

</resources>

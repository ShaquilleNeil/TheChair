<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Soft rounded corners -->
    <corners android:radius="18dp" />

    <!-- Very light white overlay for glass effect -->
    <solid android:color="#fffceb" />

    <!-- Soft border to define edges -->
    <stroke
        android:width="1dp"
        android:color="#22CCCCCC" />

    <!-- Optional light blur simulation using padding + transparent background -->
    <padding
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp" />

</shape>

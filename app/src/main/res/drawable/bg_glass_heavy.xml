<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Heavy frosted overlay -->
    <solid android:color="#1AFFFFFF" /> <!-- stronger frost -->

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#33FFFFFF" />  <!-- subtle glass outline -->

    <!-- Rounded corners -->
    <corners android:radius="18dp" />

    <!-- More depth -->
    <padding
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp"
        android:top="6dp" />

</shape>

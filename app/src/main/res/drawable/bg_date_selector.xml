<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when date is selected -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#4F46E5" /> <!-- Indigo / accent color -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- State when date is pressed (tapped but not yet selected) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#6366F1" /> <!-- lighter indigo for press feedback -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Default / unselected state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="#E0E0E0" /> <!-- light gray outline -->
        </shape>
    </item>

</selector>

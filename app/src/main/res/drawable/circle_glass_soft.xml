<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Soft frosted background -->
    <solid android:color="#1AFFFFFF" />

    <!-- Very soft white edge glow -->
    <stroke
        android:width="2dp"
        android:color="#40FFFFFF" />

    <!-- Inner shadow / highlight (subtle glass depth) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>

    <!-- Slight blur feel -->
    <gradient
        android:type="radial"
        android:gradientRadius="120dp"
        android:startColor="#26FFFFFF"
        android:endColor="#00FFFFFF" />

</shape>
